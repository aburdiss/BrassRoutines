{
  "name": "brass-routines",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "git config core.hooksPath ./scripts/hooks",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "licenses": "npm-license-crawler --onlyDirectDependencies --json src/SettingsStack/Licenses/licenses.json && prettier --write src/SettingsStack/Licenses/licenses.json",
    "reset": "./scripts/reset.sh",
    "gen": "./scripts/generateComponent.sh",
    "check-packages": "node ./scripts/checkForMaliciousPackages.js",
    "prettier": "prettier --check src",
    "prettier:write": "prettier --write src"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.17.10",
    "@react-native-masked-view/masked-view": "^0.2.8",
    "@react-native-picker/picker": "1.16.8",
    "@react-native-segmented-control/segmented-control": "^2.4.0",
    "@react-navigation/bottom-tabs": "^6.4.0",
    "@react-navigation/native": "^6.0.13",
    "@react-navigation/stack": "^6.3.3",
    "i18n-js": "^3.8.0",
    "lodash.memoize": "^4.1.2",
    "react": "18.1.0",
    "react-native": "0.70.4",
    "react-native-device-info": "^10.3.0",
    "react-native-draggable-flatlist": "2.5.5",
    "react-native-gesture-handler": "^1.9.0",
    "react-native-haptic-feedback": "^1.14.0",
    "react-native-idle-timer": "^2.1.7",
    "react-native-image-zoom-viewer": "^3.0.1",
    "react-native-localize": "^2.2.4",
    "react-native-modal": "^13.0.1",
    "react-native-picker-select": "^8.0.4",
    "react-native-reanimated": "^1.13.2",
    "react-native-safe-area-context": "^4.4.1",
    "react-native-screens": "^3.18.2",
    "react-native-vector-icons": "^9.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@testing-library/react-native": "^7.2.0",
    "babel-jest": "^25.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "colors": "1.1.2",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "0.72.3",
    "node-fetch": "^2.6.1",
    "npm-license-crawler": "^0.2.1",
    "react-test-renderer": "18.1.0",
    "ua-parser-js": "0.7.31"
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 80,
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "@react-native-community"
    ],
    "ignorePatterns": [
      "jest/*",
      "*.test.js"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "eqeqeq": "off",
      "consistent-this": "off"
    }
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/jest/setup.js",
      "<rootDir>/node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|react-native-image-pan-zoom|react-native-haptic-feedback|react-native-image-zoom-viewer|react-native-animatable|react-native-modal|react-native-iphone-x-helper|react-native-reanimated|react-native-vector-icons|react-native-screens|react-native-splash-screen|react-navigation-tabs|@?react-navigation|react-native-gesture-handler|@react-native-segmented-control/segmented-control|react-native-picker-select|@react-native-picker/picker)/)"
    ]
  }
}
